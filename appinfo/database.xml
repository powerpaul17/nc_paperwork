<?xml version="1.0" encoding="UTF-8" ?>
<database>
  <name>*dbname*</name>
  <create>true</create>
  <overwrite>false</overwrite>
  <charset>utf8</charset>

  <table>
    <name>*dbprefix*paperwork_documents</name>
    <declaration>
      <field>
        <name>id</name>
        <type>integer</type>
        <unsigned>1</unsigned>
        <notnull>true</notnull>
        <autoincrement>1</autoincrement>
        <length>10</length>
      </field>
      <field>
        <name>date</name>
        <type>date</type>
        <notnull>true</notnull>
      </field>
      <field>
        <name>timestamp_added</name>
        <type>timestamp</type>
        <notnull>true</notnull>
      </field>
      <field>
        <name>description</name>
        <type>text</type>
        <length>150</length>
      </field>
      <field>
        <name>user_id</name>
        <type>text</type>
        <notnull>true</notnull>
        <length>200</length>
      </field>
      <index>
        <name>idx_date</name>
        <field>
          <name>date</name>
          <sorting>descending</sorting>
        </field>
      </index>
    </declaration>
  </table>

  <table>
    <name>*dbprefix*paperwork_labels</name>
    <declaration>
      <field>
        <name>id</name>
        <type>integer</type>
        <unsigned>1</unsigned>
        <notnull>true</notnull>
        <autoincrement>1</autoincrement>
        <length>10</length>
      </field>
      <field>
        <name>label</name>
        <type>text</type>
        <length>50</length>
      </field>
      <field>
        <name>description</name>
        <type>text</type>
        <length>150</length>
      </field>
      <field>
        <name>user_id</name>
        <type>text</type>
        <notnull>true</notnull>
        <length>200</length>
      </field>
      <index>
        <name>idx_label</name>
        <field>
          <name>label</name>
          <sorting>ascending</sorting>
        </field>
        <field>
          <name>user_id</name>
          <sorting>ascending</sorting>
        </field>
        <unique>true</unique>
      </index>
    </declaration>
  </table>

  <table>
    <name>*dbprefix*paperwork_document_labels</name>
    <declaration>
      <field>
        <name>id</name>
        <type>integer</type>
        <unsigned>1</unsigned>
        <notnull>true</notnull>
        <autoincrement>1</autoincrement>
        <length>10</length>
      </field>
      <field>
        <name>document_id</name>
        <type>integer</type>
        <unsigned>1</unsigned>
        <notnull>true</notnull>
        <length>10</length>
      </field>
      <field>
        <name>label_id</name>
        <type>integer</type>
        <unsigned>1</unsigned>
        <notnull>true</notnull>
        <length>10</length>
      </field>
      <field>
        <name>user_id</name>
        <type>text</type>
        <notnull>true</notnull>
        <length>200</length>
      </field>
      <index>
        <name>idx_document_id</name>
        <field>
          <name>document_id</name>
          <sorting>ascending</sorting>
        </field>
      </index>
    </declaration>
  </table>

</database>
